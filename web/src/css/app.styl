// This file is included in the build if src/main.js imports it.
// Otherwise the default Material CSS file is bundled.
// Check "DEFAULT / CUSTOM STYLE" in src/main.js
@import './themes/common.variables'

/**
 * GLOBAL
 */
body
  color $blue-grey-5

h3
  font-size 24px
  margin 0
  font-weight 400

.container
  margin 0 30px 30px

.background-positive
  background-color $positive

.background-negative
  background-color $negative

// INPUT FILE
.label-file
  cursor pointer

.input-file
  display none

/*
 * QUASAR COMPONENTS
 */

// LAYOUT
.layout-page-container
  background $background

.logo-container
  width 100%
  height 100%
  min-height: calc(100vh - 50px)
  background url("../assets/splash.jpg") no-repeat
  background-size cover

.layout-header
  box-shadow none
  .q-toolbar
    background $light
    color $faded
    border-bottom 1px solid $grey-5
    .q-btn
      width 45px
      height 45px
      transition all .5s ease-in-out
    .burger-icon
      position relative
      cursor pointer
      .q-icon
        margin-right 0

.layout-aside-left
  box-shadow none

.q-list
  padding-top 0
  .sidebar-header
    &.q-list-header
      line-height 25px
      background-color $primary
      display flex
      justify-content flex-start
      align-items center
      color $white
      h3
        text-shadow: 1px 1px $indigo-10
        letter-spacing: .5px
        font-weight: 700
        font-size: 11px
        text-transform: uppercase
        margin 20px 0 10px
    .side-header
      padding 9px 9px 9px 16px
      background-color $secondary
      border-bottom 1px solid #1d4a41
      span
        font-size 22px
        padding-left 15px
  .q-item
    .q-item-section
      color: $white
      .q-item-sublabel
        color: $grey-5
  .q-item.active,
  .q-item.router-link-active,
  .q-item:focus,
  .q-item:hover
    background-color $background
    border-left 6px solid $secondary
    transition all .2s ease-out
    .q-item-section
      color: $grey-10
      .q-item-sublabel
        color: $grey-8

// CARD
.q-card
  box-shadow none
  border 1px solid $border
  background white
  &.sm-card
  &.row
    margin 0
    .q-card-main
      flex-grow 1
      align-items center
      .q-icon
        padding .8rem
      h5
        font-size 1.4em
        color black
        justify-self center
        flex-grow 1
    q-card-actions
      display flex
      flex-grow 0
      border-left 1px solid $border
      .q-btn
        align-self stretch

  .q-card-primary
    background-color $light
    .q-card-title
      h3
        color $grey-10

/*
 * PAGE LIST
 * With data table
 */
.page-list
  .q-data-table
    .q-btn
      background-color $primary
      color $white !important
  table.results
    width: 100%
  .font-result
    font-size: 1.1rem
    line-height: inherit
  .results-number
    margin-top: 1em
    margin-bottom: .5em
  .inputs
    display: flex
    justify-content: space-between
    align-items: center
    .q-if
      margin-bottom: 16px

  // HTML TABLE
  .q-table
    thead
      tr
        border-bottom 2px solid #eee
        min-height 56px
  &:not(.responsive)
    th
      border-bottom: 2px solid #bdbdbd !important;

// MODAL
.modal
  .q-modal-layout
    .layout-header
      .q-toolbar
        background-color $primary
        color $white
    .q-modal-layout-content
      padding 15px
      .q-list
        padding 0
        border none
        .q-item
          padding 10px
          border-bottom 1px solid rgba(0, 0, 0, 0.12)
          .q-item-main
            color $blue-grey-5
          &:last-child
            border none
          &:nth-child(odd)
            background-color $grey-3
          &:hover
            background-color $neutral
      h1
        display none
      h2
        font-size 1.5rem
        padding-bottom 5px
        border-bottom 1px solid
      h3
        font-size 1.2rem
        color $tertiary

.btn-close-modal
  width: 100%

// DATA TABLE
.q-data-table
  font-size 100%

.q-pagination .q-btn
  margin 10px 2px 8px

// COLLAPSIBLE - ACCORDION
.selected-list
  .q-list
    padding 0
    .q-collapsible:hover,
    .q-collapsible-opened,
    .q-collapsible-opened:hover
      .q-item
        background-color $secondary
        color $white
        .q-item-sublabel
          color rgba(0, 0, 0, 0.54)
    .q-collapsible
      .q-item
        transition all .2s linear
      .q-collapsible-sub-item
        .list-table
          ul
            list-style none
            padding-left 0
            li
              padding 10px
              border-bottom 1px solid rgba(0, 0, 0, 0.12)
              color $blue-grey-5
              &:last-child
                border none
              &:nth-child(odd)
                background-color $grey-3
        pre
          display none
        h2
          font-size 1.5rem
          padding-bottom 5px
          border-bottom 1px solid
        h3
          font-size 1.2rem
          color $tertiary

  // BREADCRUMB
ul.breadcrumb
  margin 30px
  li
    margin-bottom 0
    a
      transition background-color .2s linear
        &:after,
        &:before
          transition all .2s linear
        &:hover
          background-color $secondary
          &:after
            border-left-color $secondary
          &:before
            border-color $secondary
            border-left-color transparent
      a.router-link-exact-active
        background-color $secondary
        &:before
          border-color $secondary
          border-left-color transparent

// BUTTONS
.q-btn
  box-shadow none

.q-btn-standard
  &.open
    .q-icon
      transform rotate(45deg)
  .q-icon
    transition transform .3s ease-in-out
    width 24px

.q-btn-small
  padding 0 6px
  .q-icon
    width 19px

.q-item-letter,
.q-item-icon
  width 24px;

.btn-flat-primary
  background-color $primary
  color $white
